<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper3.0//EN" "../dtd/mybatis-3-mapper.dtd">
<mapper namespace="dto.mapper.UserMapper">
    
    <!-- 회원가입 -->
    <insert id="insertUser" parameterType="dto.UserDto">
        INSERT INTO users (email, password, nickname, role, photo)
        VALUES (#{email}, #{password}, #{nickname}, #{role}, #{photo});
    </insert>

    <!-- 이메일로 사용자 검색 -->
    <select id="getUserByEmail" parameterType="String" resultType="dto.UserDto">
        SELECT * FROM users WHERE email = #{email};
    </select>

    <!-- 닉네임으로 사용자 검색 -->
    <select id="getUserByNickname" parameterType="String" resultType="dto.UserDto">
        SELECT * FROM users WHERE nickname = #{nickname};
    </select>

    <!-- 사용자 정보 수정 -->
    <update id="updateUser" parameterType="dto.UserDto">
        UPDATE users
        SET password = #{password}, nickname = #{nickname}, photo = #{photo}
        WHERE email = #{email};
    </update>

    <!-- 사용자 삭제 -->
    <delete id="deleteUser" parameterType="int">
        DELETE FROM users WHERE id = #{id};
    </delete>

</mapper>